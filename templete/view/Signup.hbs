                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-static">First Name</label>
                            <input type="text" class="form-control" id="fname" name="FirstName">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-static">Last Name</label>
                            <input type="text" class="form-control" id="lname" name="LastName">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-static">Date of birth </label>
                            <input type="date" class="form-control" name="Birthday">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <select class="form-control bmd-label-static" id="gender" name="Gender">
                              <option value="other">Gender</option>
                              <option value="male">Male</option>
                              <option value="female">Female</option>
                            </select>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <select class="form-control bmd-label-static" id="roll" name="Role">
                              <option value="other">Role</option>
                              <option value="admin">Admin</option>
                              <option value="Chef">Chef</option>
                            </select>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-static">Email </label>
                            <input type="email" id="email" required class="form-control" name="Email">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-static">Password </label>
                            <input type="password" class="form-control" id="txtPassword" name="Password">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label class="bmd-label-static">Confirm Password </label>
                            <input type="password" class="form-control" id="txtConfirmPassword">
                          </div>
                        </div>
                      </div>
                      <button type="submit" class="btn btn-danger pull-right" onclick="return Validate()">Enter</button>
                    </form>
                  </div>
                </div>


              </div>
            </div>
          </div>
        </div>
