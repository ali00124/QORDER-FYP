                <div class="card-body">
                  <div class="table-responsive">
                    <form action="/itemupdate" method="post">
                      {{#each listitem}}
                      <div id="accordion">
                        <div class="card" style="background-color:#fdd31f;">
                          <div class="card-header" id="headingOne"
                            style="background-color:#fdd31f;padding: 0px !important;"></div>
                          <h5 class="m-0" id="BGY">
                            <button class="btn pull-left " id="yellow" data-toggle="collapse"
                              data-target="#{{this.Name}}" aria-expanded="true" aria-controls="collapseOne"
                              onclick="return false">
                              {{this.Name}}
                              <i class="material-icons ml-5" id="down">keyboard_arrow_down</i>
                            </button>
                          </h5>
                        </div>
                        <div id="{{this.Name}}" class="collapse" aria-labelledby="headingOne"
                          style="background-color: #fdd31f;" data-parent="#accordion">

                          <table class="table table-hover">
                            <thead>
                              <tr>
                                <th scope="col">Menu</th>
                                <th scope="col">Serves</th>
                                <th scope="col">Price</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                              </tr>
                            </thead>

                            <tbody>
                              {{#each this.item}}
                              <tr>
                                <td style="position: relative;">
                                  <input type="text" name="_id" value="{{this.ItemID._id}}" hidden disabled>
                                  <input type="text" placeholder="Item Name" name="ItemName" title="Enter Item name"
                                    value="{{this.ItemID.ItemName}}" disabled required
                                    style="position: absolute; display: block;top:0;left:0;margin: 0;height: 100%;width: 100%;border: none;padding: 10px;box-sizing: border-box;">
                                </td>
                                <td style="position: relative;">
                                  <input type="number" placeholder="Item serve" name="serve" title="Enter Item serve"
                                    value="{{this.ItemID.serve}}" disabled required
                                    style="position: absolute; display: block;top:0;left:0;margin: 0;height: 100%;width: 100%;border: none;padding: 10px;box-sizing: border-box;">
                                </td>
                                <td style="position: relative;">
                                  <input type="number" placeholder="Item price" name="price" title="Enter Item price"
                                    value="{{this.ItemID.price}}" disabled required
                                    style="position: absolute; display: block;top:0;left:0;margin: 0;height: 100%;width: 100%;border: none;padding: 10px;box-sizing: border-box;">
                                </td>
                                <td><button class="btn btn-success edit btn-block">Edit</button></td>
                                <td>
                                  <a onclick="ondelete(event)" class="btn btn-primary delete btn-block">
                                    Delete
                                  </a>
                                </td>
                              </tr>
                              {{/each}}
                            </tbody>
                          </table>
                        </div>
                      </div>
                      {{/each}}
                      <Button type="submit" class="btn btn-primary">Submit</Button>
